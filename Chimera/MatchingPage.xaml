<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp6.MatchingPage"
             Title="Match Info"
             BackgroundColor="#09122C">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="Match Found"
                   FontSize="28"
                   HorizontalOptions="Center"
                   TextColor="Yellow"/>

            <!-- Rider Info -->
            <Frame BackgroundColor="#1A1A2E" CornerRadius="12" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Rider Info" FontSize="22" TextColor="Gold"/>
                    <Label x:Name="RiderEmailLabel" Text="Email: " TextColor="White" FontSize="18"/>
                    <Label x:Name="RiderPhoneLabel" Text="Phone: " TextColor="White" FontSize="18"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Driver Info -->
            <Frame BackgroundColor="#1A1A2E" CornerRadius="12" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Driver Info" FontSize="22" TextColor="Gold"/>
                    <Label x:Name="DriverEmailLabel" Text="Email: " TextColor="White" FontSize="18"/>
                    <Label x:Name="DriverPhoneLabel" Text="Phone: " TextColor="White" FontSize="18"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Back to Dashboard"
                    BackgroundColor="Gray"
                    TextColor="White"
                    Clicked="OnBackToDashboardClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
